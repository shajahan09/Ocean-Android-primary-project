<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".ACC_View_Voucher">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#2A98F0"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="2dp"
        android:text="View Voucher"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F8F3F3"
        android:textSize="22sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/view_voucher_spinner"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="95dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="From Date"
            android:textSize="16dp"
            android:textColor="@color/blues"
            android:textStyle="bold"
            android:hint=" Start / From Date" />
        <TextView
            android:id="@+id/viewVoucher_from_date"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="52dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/blues"
            android:hint=" Select Date" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="To Date"
            android:textSize="16dp"
            android:textColor="@color/blues"
            android:textStyle="bold"
            android:hint=" Start / From Date" />
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/viewVoucher_to_date"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/blues"
            android:hint=" Select To Date" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
<!--        android:background="@drawable/simple_btn_border"-->

        <EditText
            android:id="@+id/viewVoucher_Reference_text"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/blues"
            android:background="@drawable/simple_btn_border"
            android:hint=" Enter Reference" />
        <Button
            android:id="@+id/voucher_btn"
            android:layout_width="130dp"
            android:layout_height="52dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:background="#2A98F0"
            android:textColor="@color/nevy_blue"
            android:text="Search"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="right"

        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/voucher_result_listView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="#E6E9EB"
            android:dividerHeight="3dp"
            />
        <!--            android:background="#61DDEE"-->
        <!--            android:listSelector="#39C1FC"-->


    </LinearLayout>

</LinearLayout>