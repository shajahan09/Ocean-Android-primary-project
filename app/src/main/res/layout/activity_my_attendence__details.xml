<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MyAttendence_Details_Activity">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/sky"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Attendance Details:"/>
    <View
        android:layout_width="154dp"
        android:background="@color/sky"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_dark_green"
        android:padding="5dp"
        android:orientation="vertical">

        <!--    ...................For Query A.............-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="ID:"/>
            <TextView
                android:id="@+id/myAttendanceDetails_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myAttendanceDetails_name"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=" "/>
            <TextView
                android:id="@+id/myAttendanceDetails_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=" "/>
            <TextView
                android:id="@+id/myAttendanceDetails_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=" "/>
        </LinearLayout>
        <TextView
            android:id="@+id/myAttendanceDetails_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textAlignment="center"
            android:text=" "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Weekend="/>
            <TextView
                android:id="@+id/my_Att_Detailes_weekend"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Holiday="/>
            <TextView
                android:id="@+id/my_Att_Detailes_holiday"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary:"/>
            <View
                android:layout_width="58dp"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
        </LinearLayout>

            ...................For Query B.............
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="IN:"/>
            <TextView
                android:id="@+id/my_Att_Detailes_inTime"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text=""/>
            <TextView
                android:id="@+id/my_Att_Detailes_login_Office_Location"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Due:"/>
            <TextView
                android:id="@+id/my_Att_Detailes_requireLoginTime"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="OUT:"/>
            <TextView
                android:id="@+id/my_Att_Detailes_officeLogOut"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text=""/>
            <TextView
                android:id="@+id/my_Att_Detailes_logOutOffice_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Due:"/>
            <TextView
                android:id="@+id/my_Att_Detailes_requireLogOutTime"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>
        <TextView
            android:id="@+id/my_Att_Detailes_absentReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/blue"
            android:text=""/>
        <TextView
            android:id="@+id/my_Att_Detailes_lateLoginReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/blue"
            android:text=""/>
        <TextView
            android:id="@+id/my_Att_Detailes_earlyLogoutReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="@color/blue"
            android:fontFamily="sans-serif-condensed-light"
            android:text=""/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Detail:"/>
            <View
                android:layout_width="32dp"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/myAttDetails_listView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:divider="#E6E9EB"
                android:dividerHeight="0.5dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/edit_Btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Edit"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/sky"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-condensed-light"
                android:focusableInTouchMode="true"
                android:background="#00E4E3E3"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
