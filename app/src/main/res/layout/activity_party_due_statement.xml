<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".Party_Due_Statement_Activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#2A98F0"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="2dp"
        android:text="Party Due Statement"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F8F3F3"
        android:textSize="22sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/partyDue_statement_spinner"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginLeft="80dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/partyDueStatement_result_listView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="#E6E9EB"
            android:dividerHeight="3dp"/>
        <!--            android:background="#61DDEE"-->
        <!--            android:listSelector="#39C1FC"-->

    </LinearLayout>

</LinearLayout>