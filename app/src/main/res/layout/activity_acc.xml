<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AccActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/acc_p_name"
            android:text="AKK(ANWARUL KABIR KHAN)"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/acc_p_designation"
            android:layout_marginTop="20dp"
            android:text="Manager,Human Resources"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--       <ImageButton-->
        <!--           android:id="@+id/back_btn"-->
        <!--           android:layout_width="wrap_content"-->
        <!--           android:layout_height="35dp"-->
        <!--           android:background="#39F3EDED"-->
        <!--           android:src="@drawable/logout"-->
        <!--           android:layout_alignParentRight="true"-->
        <!--           />-->

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/accHead_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:text="ACCOUNTS"
            android:background="@drawable/button_shape"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorHeader"
            android:textSize="22sp"
            android:textStyle="bold" />
    <ListView
        android:id="@+id/acc_listView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        />
    </LinearLayout>
</LinearLayout>