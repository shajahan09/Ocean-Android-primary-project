<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Expiory_List">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#2A98F0"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="2dp"
        android:text="Expiry List"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F8F3F3"
        android:textSize="22sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/Expiry_menufacture_spinner"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/Expiry_group_spinner"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/Expiry_item_spinner"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <!--    <LinearLayout-->
    <!--        android:layout_marginTop="7dp"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:gravity="center"-->
    <!--        android:background="@drawable/simple_btn_border"-->
    <!--        android:orientation="horizontal">-->

    <!--        <Spinner-->
    <!--            android:id="@+id/ud_no_spinner"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:textAlignment="center"-->
    <!--            android:layout_marginLeft="45dp"-->
    <!--            android:layout_height="50dp" />-->

    <!--    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="Date"
            android:textSize="16dp"
            android:textColor="@color/blues"
            android:textStyle="bold"
            android:hint=" Start / From Date" />
        <TextView
            android:id="@+id/expiry_dateTex"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/blues"
            android:hint="Date" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:background="#E2DDDD"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Lot No"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Expiry on"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:text="Qty"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/expiry_listView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="#E6E9EB"
            android:dividerHeight="1dp"
            />
    </LinearLayout>

</LinearLayout>