<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Chalan_Report_Summary_Activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#2A98F0"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="2dp"
        android:text="Chalan Report(Summary)"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F8F3F3"
        android:textSize="22sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/chalanReportSummary_customer_spinner"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/chalanReportSummary_Group_spinner"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/chalanReportSummary_item_spinner"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="From Date"
            android:textSize="16dp"
            android:textColor="@color/blues"
            android:textStyle="bold"
            android:hint=" Start / From Date" />
        <TextView
            android:id="@+id/chalanReportSummary_from_date"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/blues"
            android:hint=" From Date" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/simple_btn_border"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="To Date"
            android:textSize="16dp"
            android:textColor="@color/blues"
            android:textStyle="bold"
            android:hint=" Start / From Date" />
        <TextView
            android:id="@+id/chalanReportSummary_to_date"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/blues"
            android:hint=" To Date" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-light"
        android:background="#E2DDDD"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Qty#"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Unit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"
            android:text="Amount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/chalanReportSummary_result_listView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="#E6E9EB"
            android:dividerHeight="1dp"
            />
    </LinearLayout>

</LinearLayout>